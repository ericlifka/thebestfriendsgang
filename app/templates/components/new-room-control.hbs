{{#if showForm}}
    <form class="form-inline" {{action "createRoom" on="submit"}}>
        <div class="form-group">
            <label class="sr-only" for="roomname">Room name</label>
            {{input type="text" class="first-input form-control" id="roomname" placeholder="room name" value=roomName}}
        </div>
        <button type="submit" class="btn btn-default">Create</button>
        <button type="button" class="btn btn-link" {{action "hideForm"}}>Cancel</button>
    </form>
{{else}}
    <button type="button" class="btn btn-link" {{action "showForm"}}>New room</button>
{{/if}}