{{#if user}}
    <strong>{{user}}</strong>
    <button type="button" class="btn btn-link" {{action "changeUser"}}>change</button>
{{else}}
    <form class="form-inline" {{action "setUser" on="submit"}}>
        <div class="form-group">
            <label class="sr-only" for="nickname">Nickname</label>
            {{input type="text" class="form-control" id="nickname" placeholder="nickname" value=nickname}}
        </div>
        <button type="submit" class="btn btn-default">Set</button>
    </form>
{{/if}}